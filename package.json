{
  "name": "rails-structure-viewer",
  "displayName": "Rails Structure Viewer",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
    "activitybar": [
        {
          "id": "railsStructureSidebar",
          "title": "Rails Structure",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "railsStructureSidebar": [
        {
          "icon": "icon.svg",
          "id": "railsStructureView",
          "name": "Database Structure"
        }
      ]
    },
    "commands": [
      {
        "command": "rails-structure-viewer.openTreeView",
        "title": "Open Rails Structure View"
      },
      {
        "command": "rails-structure-viewer.refreshStructure",
        "title": "Refresh Structure",
        "icon": {
          "dark": "media/refresh-dark.svg",
          "light": "media/refresh-light.svg"
        } 
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rails-structure-viewer.refreshStructure",
          "when": "view == railsStructureView",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "npx rimraf .vscode-test/user-data && vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.34.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
